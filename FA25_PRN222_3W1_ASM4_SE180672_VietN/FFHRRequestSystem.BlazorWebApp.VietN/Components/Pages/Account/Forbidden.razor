@page "/account/forbidden"

<PageTitle>Access Denied</PageTitle>

<div class="container py-5">
    <div class="row text-center">
        <div class="col-md-12">
            <div class="error-template">
                <h1 class="text-danger">
                    <i class="bi bi-shield-exclamation" style="font-size: 100px;"></i>
                </h1>
                <h2 class="text-danger">403 - Forbidden</h2>
                <div class="error-details mb-4">
                    You do not have permission to access this resource!
                </div>
                <div class="error-actions">
                    <a href="/ticketprocessingvietns" class="btn btn-primary btn-lg">
                        <i class="bi bi-house"></i>
                        Take Me Home
                    </a>
                    <a href="/account/logout" class="btn btn-secondary btn-lg">
                        <i class="bi bi-box-arrow-right"></i>
                        Logout
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
