@page "/ticketprocessingvietns/delete"
@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using FFHRRequestSystem.Entitites.VietN.Models
@inject IDbContextFactory<FFHRRequestSystem.Repositories.VietN.DBContext.FA25_PRN222_3W_PRN222_01_G4_FacilityFeedbackHelpdeskRequestSystemContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete Ticket Processing</PageTitle>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-danger">
            <i class="bi bi-trash me-2"></i>Delete Ticket Processing
        </h2>
        <a href="/ticketprocessingvietns" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="alert alert-warning" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>
        <strong>Warning!</strong> Are you sure you want to delete this ticket processing record?
    </div>

    <div>
        @if (ticketprocessingvietn is null)
        {
            <p><em>Loading...</em></p>
        }
        else
        {
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Ticket Processing Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Processing Code</dt>
                        <dd class="col-sm-9">@ticketprocessingvietn.ProcessingCode</dd>
                        <dt class="col-sm-3">Ticket Reference</dt>
                        <dd class="col-sm-9">@ticketprocessingvietn.TicketReference</dd>
                        <dt class="col-sm-3">Processing Action</dt>
                        <dd class="col-sm-9">@ticketprocessingvietn.ProcessingAction</dd>
                        <dt class="col-sm-3">Action Description</dt>
                        <dd class="col-sm-9">@ticketprocessingvietn.ActionDescription</dd>
                        <dt class="col-sm-3">Priority Level</dt>
                        <dd class="col-sm-9">@ticketprocessingvietn.PriorityLevel</dd>
                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">@ticketprocessingvietn.Status</dd>
                        <dt class="col-sm-3">Created Date</dt>
                        <dd class="col-sm-9">@ticketprocessingvietn.CreatedDate</dd>
                    </dl>
                </div>
            </div>

            <div class="mt-4">
                <EditForm method="post" Model="ticketprocessingvietn" OnValidSubmit="DeleteTicketProcessingVietN" FormName="delete" Enhance>
                    <div class="d-flex justify-content-end gap-2">
                        <a href="/ticketprocessingvietns" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger" disabled="@(ticketprocessingvietn is null)">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </div>
                </EditForm>
            </div>
        }
    </div>
</div>

@code {
    private TicketProcessingVietN? ticketprocessingvietn;

    [SupplyParameterFromQuery]
    private Guid TicketProcessingVietNid { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        ticketprocessingvietn = await context.TicketProcessingVietNs.FirstOrDefaultAsync(m => m.TicketProcessingVietNid == TicketProcessingVietNid);

        if (ticketprocessingvietn is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteTicketProcessingVietN()
    {
        using var context = DbFactory.CreateDbContext();
        context.TicketProcessingVietNs.Remove(ticketprocessingvietn!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/ticketprocessingvietns");
    }
}
