@page "/ticketprocessingvietns/delete"
@rendermode InteractiveServer
@attribute [Authorize(Roles = "1, 3")]
@using Microsoft.AspNetCore.Authorization
@using Blazored.Toast.Services
@using FFHRRequestSystem.Entitites.VietN.Models
@using FFHRRequestSystem.Services.VietN
@inject TicketProcessingVietNService _ticketService
@inject NavigationManager _navigationManager
@inject IToastService _toastService

<PageTitle>Delete Ticket Processing</PageTitle>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-danger">
            <i class="bi bi-trash me-2"></i>Delete Ticket Processing
        </h2>
        <a href="/ticketprocessingvietns" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    @if (ticketprocessingvietn is null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <strong>Warning!</strong> Are you sure you want to delete this ticket processing record?
        </div>

        <div class="card shadow-sm mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0">Ticket Processing Details</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Processing Code</dt>
                    <dd class="col-sm-9">@ticketprocessingvietn.ProcessingCode</dd>
                    
                    <dt class="col-sm-3">Ticket Reference</dt>
                    <dd class="col-sm-9">@ticketprocessingvietn.TicketReference</dd>
                    
                    <dt class="col-sm-3">Processing Type</dt>
                    <dd class="col-sm-9">@ticketprocessingvietn.ProcessingTypeVietN?.TypeName</dd>
                    
                    <dt class="col-sm-3">Processing Action</dt>
                    <dd class="col-sm-9">@ticketprocessingvietn.ProcessingAction</dd>
                    
                    <dt class="col-sm-3">Action Description</dt>
                    <dd class="col-sm-9">@ticketprocessingvietn.ActionDescription</dd>
                    
                    <dt class="col-sm-3">Priority Level</dt>
                    <dd class="col-sm-9">
                        @{
                            var priorityText = ticketprocessingvietn.PriorityLevel switch { 3 => "High", 2 => "Medium", _ => "Low" };
                            var priorityClass = ticketprocessingvietn.PriorityLevel switch { 3 => "badge-danger", 2 => "badge-warning", _ => "badge-secondary" };
                        }
                        <span class="badge @priorityClass">@priorityText</span>
                    </dd>
                    
                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9">
                        @{
                            var statusText = ticketprocessingvietn.Status switch { 1 => "Active", 2 => "Resolved", 3 => "Closed", _ => "Unknown" };
                            var statusClass = ticketprocessingvietn.Status switch { 1 => "badge-success", 2 => "badge-info", 3 => "badge-secondary", _ => "badge-secondary" };
                        }
                        <span class="badge @statusClass">@statusText</span>
                    </dd>
                    
                    <dt class="col-sm-3">Created Date</dt>
                    <dd class="col-sm-9">@ticketprocessingvietn.CreatedDate?.ToString("yyyy-MM-dd HH:mm")</dd>
                    
                    <dt class="col-sm-3">Modified Date</dt>
                    <dd class="col-sm-9">@ticketprocessingvietn.ModifiedDate?.ToString("yyyy-MM-dd HH:mm")</dd>
                </dl>
            </div>
        </div>

        <EditForm Model="ticketprocessingvietn" OnValidSubmit="DeleteTicketProcessingVietN" FormName="DeleteTicketForm">
            <AntiforgeryToken />
            <div class="d-flex justify-content-between">
                <a href="/ticketprocessingvietns" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Confirm Delete
                </button>
            </div>
        </EditForm>
    }
</div>

@code {
    private TicketProcessingVietN? ticketprocessingvietn;

    [SupplyParameterFromQuery]
    private Guid TicketProcessingVietNid { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Console.WriteLine("=== Delete.razor OnInitializedAsync Started ===");
        Console.WriteLine($"TicketProcessingVietNid: {TicketProcessingVietNid}");
        
        try
        {
            Console.WriteLine($"Loading ticket with ID: {TicketProcessingVietNid}");
            ticketprocessingvietn = await _ticketService.GetByIdAsync(TicketProcessingVietNid);

            if (ticketprocessingvietn is null)
            {
                Console.WriteLine("ERROR: Ticket not found!");
                _navigationManager.NavigateTo("notfound");
            }
            else
            {
                Console.WriteLine($"Ticket loaded successfully: {ticketprocessingvietn.ProcessingCode}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"ERROR in OnInitializedAsync: {ex.Message}");
            Console.WriteLine($"Stack Trace: {ex.StackTrace}");
        }
        Console.WriteLine("=== Delete.razor OnInitializedAsync Completed ===");
    }

    private async Task DeleteTicketProcessingVietN()
    {
        Console.WriteLine("=== DeleteTicketProcessingVietN Started ===");
        try
        {
            Console.WriteLine($"Deleting ticket: {ticketprocessingvietn!.ProcessingCode}");
            Console.WriteLine($"Ticket ID: {TicketProcessingVietNid}");
            
            Console.WriteLine("Calling service DeleteAsync...");
            await _ticketService.DeleteAsync(TicketProcessingVietNid);
            
            Console.WriteLine("Ticket deleted successfully!");
            _toastService.ShowSuccess($"Ticket {ticketprocessingvietn.ProcessingCode} deleted successfully!");
            
            Console.WriteLine("Navigating to index page...");
            _navigationManager.NavigateTo("/ticketprocessingvietns");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"ERROR in DeleteTicketProcessingVietN: {ex.Message}");
            Console.WriteLine($"Stack Trace: {ex.StackTrace}");
            if (ex.InnerException != null)
            {
                Console.WriteLine($"Inner Exception: {ex.InnerException.Message}");
            }
            _toastService.ShowError($"Failed to delete ticket: {ex.Message}");
        }
        Console.WriteLine("=== DeleteTicketProcessingVietN Completed ===");
    }
}
