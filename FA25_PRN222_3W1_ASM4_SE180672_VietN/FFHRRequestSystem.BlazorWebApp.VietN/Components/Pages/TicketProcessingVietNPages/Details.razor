@page "/ticketprocessingvietns/details"
@rendermode InteractiveServer
@using FFHRRequestSystem.Entitites.VietN.Models
@using FFHRRequestSystem.Services.VietN
@inject TicketProcessingVietNService _ticketService
@inject NavigationManager _navigationManager

<PageTitle>Ticket Processing Details</PageTitle>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-info">
            <i class="bi bi-info-circle me-2"></i>Ticket Processing Details
        </h2>
        <a href="/ticketprocessingvietns" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    @if (ticketprocessingvietn is null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8">
                <!-- Basic Information -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Basic Information</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Processing Code</dt>
                            <dd class="col-sm-8"><strong>@ticketprocessingvietn.ProcessingCode</strong></dd>
                            
                            <dt class="col-sm-4">Ticket Reference</dt>
                            <dd class="col-sm-8">@ticketprocessingvietn.TicketReference</dd>
                            
                            <dt class="col-sm-4">Processing Type</dt>
                            <dd class="col-sm-8">@ticketprocessingvietn.ProcessingTypeVietN?.TypeName</dd>
                            
                            <dt class="col-sm-4">Related Ticket</dt>
                            <dd class="col-sm-8">@ticketprocessingvietn.RelatedTicketCode</dd>
                        </dl>
                    </div>
                </div>

                <!-- Processing Details -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="bi bi-gear me-2"></i>Processing Details</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Processing Action</dt>
                            <dd class="col-sm-8">@ticketprocessingvietn.ProcessingAction</dd>
                            
                            <dt class="col-sm-4">Action Description</dt>
                            <dd class="col-sm-8">@ticketprocessingvietn.ActionDescription</dd>
                            
                            <dt class="col-sm-4">Resolved Note</dt>
                            <dd class="col-sm-8">@ticketprocessingvietn.ResolvedNote</dd>
                        </dl>
                    </div>
                </div>

                <!-- Additional Info -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="bi bi-file-text me-2"></i>Additional Information</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Is Auto Processed</dt>
                            <dd class="col-sm-8">
                                @if (ticketprocessingvietn.IsAutoProcessed)
                                {
                                    <span class="badge badge-info">Auto</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">Manual</span>
                                }
                            </dd>
                            
                            <dt class="col-sm-4">Processed By</dt>
                            <dd class="col-sm-8">@ticketprocessingvietn.ProcessedBy</dd>
                            
                            <dt class="col-sm-4">Processed Date</dt>
                            <dd class="col-sm-8">@ticketprocessingvietn.ProcessedDate?.ToString("yyyy-MM-dd HH:mm")</dd>
                            
                            <dt class="col-sm-4">Created Date</dt>
                            <dd class="col-sm-8">@ticketprocessingvietn.CreatedDate?.ToString("yyyy-MM-dd HH:mm")</dd>
                            
                            <dt class="col-sm-4">Modified Date</dt>
                            <dd class="col-sm-8">@ticketprocessingvietn.ModifiedDate?.ToString("yyyy-MM-dd HH:mm")</dd>
                        </dl>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <!-- Status Card -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0"><i class="bi bi-flag me-2"></i>Status & Priority</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-5">Priority</dt>
                            <dd class="col-sm-7">
                                @{
                                    var priorityText = ticketprocessingvietn.PriorityLevel switch { 3 => "High", 2 => "Medium", _ => "Low" };
                                    var priorityClass = ticketprocessingvietn.PriorityLevel switch { 3 => "badge-danger", 2 => "badge-warning", _ => "badge-secondary" };
                                }
                                <span class="badge @priorityClass">@priorityText</span>
                            </dd>
                            
                            <dt class="col-sm-5">Status</dt>
                            <dd class="col-sm-7">
                                @{
                                    var statusText = ticketprocessingvietn.Status switch { 1 => "Active", 2 => "Resolved", 3 => "Closed", _ => "Unknown" };
                                    var statusClass = ticketprocessingvietn.Status switch { 1 => "badge-success", 2 => "badge-info", 3 => "badge-secondary", _ => "badge-secondary" };
                                }
                                <span class="badge @statusClass">@statusText</span>
                            </dd>
                            
                            <dt class="col-sm-5">Overdue Days</dt>
                            <dd class="col-sm-7">@ticketprocessingvietn.OverdueDays</dd>
                            
                            <dt class="col-sm-5">Escalation</dt>
                            <dd class="col-sm-7">Level @ticketprocessingvietn.EscalationLevel</dd>
                        </dl>
                    </div>
                </div>

                <!-- Actions -->
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a href="/ticketprocessingvietns/edit?ticketprocessingvietnid=@ticketprocessingvietn.TicketProcessingVietNid" class="btn btn-primary">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a href="/ticketprocessingvietns/delete?ticketprocessingvietnid=@ticketprocessingvietn.TicketProcessingVietNid" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                            <a href="/ticketprocessingvietns" class="btn btn-secondary">
                                <i class="bi bi-list"></i> Back to List
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private TicketProcessingVietN? ticketprocessingvietn;

    [SupplyParameterFromQuery]
    private Guid TicketProcessingVietNid { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Console.WriteLine("=== Details.razor OnInitializedAsync Started ===");
        Console.WriteLine($"TicketProcessingVietNid: {TicketProcessingVietNid}");
        
        try
        {
            Console.WriteLine($"Loading ticket with ID: {TicketProcessingVietNid}");
            ticketprocessingvietn = await _ticketService.GetByIdAsync(TicketProcessingVietNid);

            if (ticketprocessingvietn is null)
            {
                Console.WriteLine("ERROR: Ticket not found!");
                _navigationManager.NavigateTo("notfound");
            }
            else
            {
                Console.WriteLine($"Ticket loaded successfully: {ticketprocessingvietn.ProcessingCode}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"ERROR in OnInitializedAsync: {ex.Message}");
            Console.WriteLine($"Stack Trace: {ex.StackTrace}");
        }
        Console.WriteLine("=== Details.razor OnInitializedAsync Completed ===");
    }
}
