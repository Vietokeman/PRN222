@model FFHRRequestSystem.Entitites.VietN.Models.TicketProcessingVietN

@{
    ViewData["Title"] = "Delete Ticket";
    Layout = "~/Views/Shared/_LayoutCRUD.cshtml";
}

<div class="content-header">
    <h1><i class="bi bi-trash"></i> Delete Ticket</h1>
    <div class="header-actions">
        <a asp-action="Index" class="btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="form-container">
    <div class="alert alert-warning" role="alert">
        <i class="bi bi-exclamation-triangle"></i> Are you sure you want to delete this ticket? This action cannot be undone.
    </div>

    <!-- Basic Information Section -->
    <div class="form-section">
        <h3 class="form-section-title">Basic Information</h3>
        <div class="form-row">
            <div class="info-group">
                <label>@Html.DisplayNameFor(model => model.ProcessingCode)</label>
                <div class="info-value">@Html.DisplayFor(model => model.ProcessingCode)</div>
            </div>
            <div class="info-group">
                <label>@Html.DisplayNameFor(model => model.TicketReference)</label>
                <div class="info-value">@Html.DisplayFor(model => model.TicketReference)</div>
            </div>
        </div>
        <div class="form-row">
            <div class="info-group">
                <label>@Html.DisplayNameFor(model => model.ProcessingTypeVietN)</label>
                <div class="info-value">@Html.DisplayFor(model => model.ProcessingTypeVietN.TypeCode)</div>
            </div>
            <div class="info-group">
                <label>@Html.DisplayNameFor(model => model.RelatedTicketCode)</label>
                <div class="info-value">@Html.DisplayFor(model => model.RelatedTicketCode)</div>
            </div>
        </div>
    </div>

    <!-- Processing Details Section -->
    <div class="form-section">
        <h3 class="form-section-title">Processing Details</h3>
        <div class="form-row">
            <div class="info-group">
                <label>@Html.DisplayNameFor(model => model.ProcessingAction)</label>
                <div class="info-value">@Html.DisplayFor(model => model.ProcessingAction)</div>
            </div>
            <div class="info-group" style="grid-column: 2 / -1;">
                <label>@Html.DisplayNameFor(model => model.ActionDescription)</label>
                <div class="info-value">@Html.DisplayFor(model => model.ActionDescription)</div>
            </div>
        </div>
        <div class="form-row">
            <div class="info-group">
                <label>@Html.DisplayNameFor(model => model.PriorityLevel)</label>
                <div class="info-value">@Html.DisplayFor(model => model.PriorityLevel)</div>
            </div>
            <div class="info-group">
                <label>@Html.DisplayNameFor(model => model.Status)</label>
                <div class="info-value">@Html.DisplayFor(model => model.Status)</div>
            </div>
        </div>
        <div class="form-row">
            <div class="info-group">
                <label>@Html.DisplayNameFor(model => model.OverdueDays)</label>
                <div class="info-value">@Html.DisplayFor(model => model.OverdueDays)</div>
            </div>
            <div class="info-group">
                <label>@Html.DisplayNameFor(model => model.EscalationLevel)</label>
                <div class="info-value">@Html.DisplayFor(model => model.EscalationLevel)</div>
            </div>
        </div>
        <div class="form-row">
            <div class="info-group">
                <label>@Html.DisplayNameFor(model => model.IsAutoProcessed)</label>
                <div class="info-value">@Html.DisplayFor(model => model.IsAutoProcessed)</div>
            </div>
        </div>
    </div>

    <!-- Resolution Details Section -->
    <div class="form-section">
        <h3 class="form-section-title">Resolution Details</h3>
        <div class="form-row">
            <div class="info-group">
                <label>@Html.DisplayNameFor(model => model.ProcessedBy)</label>
                <div class="info-value">@Html.DisplayFor(model => model.ProcessedBy)</div>
            </div>
            <div class="info-group">
                <label>@Html.DisplayNameFor(model => model.ProcessedDate)</label>
                <div class="info-value">@Html.DisplayFor(model => model.ProcessedDate)</div>
            </div>
        </div>
        <div class="form-row">
            <div class="info-group" style="grid-column: 1 / -1;">
                <label>@Html.DisplayNameFor(model => model.ResolvedNote)</label>
                <div class="info-value">@Html.DisplayFor(model => model.ResolvedNote)</div>
            </div>
        </div>
    </div>

    <!-- System Information Section -->
    <div class="form-section">
        <h3 class="form-section-title">System Information</h3>
        <div class="form-row">
            <div class="info-group">
                <label>@Html.DisplayNameFor(model => model.CreatedDate)</label>
                <div class="info-value">@Html.DisplayFor(model => model.CreatedDate)</div>
            </div>
            <div class="info-group">
                <label>@Html.DisplayNameFor(model => model.ModifiedDate)</label>
                <div class="info-value">@Html.DisplayFor(model => model.ModifiedDate)</div>
            </div>
        </div>
    </div>

    <!-- Form Actions -->
    <form asp-action="Delete" method="post" class="form-actions">
        <input type="hidden" asp-for="TicketProcessingVietNid" />
        <a asp-action="Index" class="btn-secondary">
            <i class="bi bi-x-circle"></i> Cancel
        </a>
        <button type="submit" class="btn-danger">
            <i class="bi bi-trash"></i> Delete Ticket
        </button>
    </form>
</div>
