@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - CRUD Operations</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.0/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/crud-style.css" asp-append-version="true" />
</head>
<body>
    <div class="login-container">
        <div class="login-left">
            <div class="login-illustration">
                <div style="width: 300px; height: 300px; margin: 0 auto 30px; background: linear-gradient(135deg, #FFD54F 0%, #FFC107 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; box-shadow: 0 10px 40px rgba(255, 193, 7, 0.3);">
                    <i class="bi bi-grid-3x3-gap-fill" style="font-size: 120px; color: white;"></i>
                </div>
                <h1>Welcome Back!</h1>
                <p>Manage your ticket processing system with ease. Sign in to access all features and stay organized.</p>
            </div>
        </div>
        <div class="login-right">
            <div class="login-box">
                <div class="login-header">
                    <div class="logo">
                        <i class="bi bi-grid-3x3-gap-fill"></i>
                    </div>
                    <h2>Sign In</h2>
                    <p>Enter your credentials to access your account</p>
                </div>

                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-circle"></i> @TempData["Message"]
                    </div>
                }

                <form asp-action="Login" asp-controller="Account" method="post" class="login-form">
                    @Html.AntiForgeryToken()
                    
                    <div class="form-group">
                        <label for="userName">Username</label>
                        <input type="text" id="userName" name="userName" class="form-control" placeholder="Enter your username" required />
                    </div>

                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" class="form-control" placeholder="Enter your password" required />
                    </div>

                    <button type="submit" class="btn-login">
                        <i class="bi bi-box-arrow-in-right"></i> Sign In
                    </button>
                </form>

                <div class="signup-link">
                    Don't have an account? <a href="#">Contact Admin</a>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
