@page
@model FFHRRequestSystem_RazorWebApp_VietN.Pages.TicketProcessingVietNs.IndexModel
@{
    ViewData["Title"] = "Ticket Processing";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">Ticket Processing Management</h2>
        <div class="d-flex gap-2">
            <a asp-page="Create" class="btn btn-success">
                <i class="bi bi-plus-circle me-1"></i> Create New
            </a>
            <a asp-page="TestSignalR" class="btn btn-warning">
                <i class="bi bi-broadcast me-1"></i> Test SignalR
            </a>
            <a asp-page="/Account/Logout" class="btn btn-outline-danger">
                <i class="bi bi-box-arrow-right me-1"></i> Logout
            </a>
        </div>
    </div>

    <!-- Search Form -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0">Search Filters</h5>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="ProcessingAction" class="form-label">Processing Action</label>
                    <input type="text" class="form-control" id="ProcessingAction" name="ProcessingAction" value="@Model.ProcessingAction" placeholder="Enter processing action">
                </div>
                <div class="col-md-4">
                    <label for="ActionDescription" class="form-label">Action Description</label>
                    <input type="text" class="form-control" id="ActionDescription" name="ActionDescription" value="@Model.ActionDescription" placeholder="Enter action description">
                </div>
                <div class="col-md-4">
                    <label for="TypeName" class="form-label">Processing Type Name</label>
                    <input type="text" class="form-control" id="TypeName" name="TypeName" value="@Model.TypeName" placeholder="Enter type name">
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-search"></i> Search
                    </button>
                    <a href="?" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Clear Filters
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Data Table -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Ticket Processing Records</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table id="ticketProcessingTable" class="table table-hover table-striped align-middle mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Code</th>
                            <th>Ticket Ref</th>
                            <th>Action</th>
                            <th>Description</th>
                            <th>Priority</th>
                            <th>Status</th>
                            <th>Overdue</th>
                            <th>Escalation</th>
                            <th>Auto</th>
                            <th>Processed By</th>
                            <th>Processed Date</th>
                            <th>Resolved Note</th>
                            <th>Created</th>
                            <th>Modified</th>
                            <th>Type Name</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.TicketProcessingVietN)
                        {
                            <tr data-id="@item.TicketProcessingVietNid">
                                <td>@item.ProcessingCode</td>
                                <td>@item.TicketReference</td>
                                <td>@item.ProcessingAction</td>
                                <td>
                                    <span title="@item.ActionDescription">
                                        @(item.ActionDescription?.Length > 25 ? item.ActionDescription.Substring(0, 25) + "..." : item.ActionDescription)
                                    </span>
                                </td>
                                <td>
                                    @{
                                        string priorityText = item.PriorityLevel switch
                                        {
                                            3 => "High",
                                            2 => "Medium",
                                            _ => "Low"
                                        };
                                        string priorityClass = item.PriorityLevel switch
                                        {
                                            3 => "bg-danger",
                                            2 => "bg-warning text-dark",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @priorityClass">@priorityText</span>
                                </td>
                                <td>
                                    @{
                                        string statusText = item.Status switch
                                        {
                                            1 => "Active",
                                            2 => "Resolved",
                                            3 => "Closed",
                                            _ => "Unknown"
                                        };
                                        string statusClass = item.Status switch
                                        {
                                            1 => "bg-success",
                                            2 => "bg-info",
                                            3 => "bg-secondary",
                                            _ => "bg-light text-dark"
                                        };
                                    }
                                    <span class="badge @statusClass">@statusText</span>
                                </td>
                                <td>@item.OverdueDays</td>
                                <td>@item.EscalationLevel</td>
                                <td>
                                    @if (item.IsAutoProcessed)
                                    {
                                        <span class="badge bg-info text-dark">Auto</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-dark">Manual</span>
                                    }
                                </td>
                                <td>@item.ProcessedBy</td>
                                <td>@item.ProcessedDate?.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <span title="@item.ResolvedNote">
                                        @(item.ResolvedNote?.Length > 20 ? item.ResolvedNote.Substring(0, 20) + "..." : item.ResolvedNote)
                                    </span>
                                </td>
                                <td>@item.CreatedDate?.ToString("yyyy-MM-dd")</td>
                                <td>@item.ModifiedDate?.ToString("yyyy-MM-dd")</td>
                                <td>@item.ProcessingTypeVietN?.TypeName</td>
                                <td class="text-center">
                                    <a asp-page="./Details" asp-route-id="@item.TicketProcessingVietNid" class="btn btn-sm btn-outline-info me-1" title="View Details">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                    <a asp-page="./Edit" asp-route-id="@item.TicketProcessingVietNid" class="btn btn-sm btn-outline-primary me-1" title="Edit">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-page="./Delete" asp-route-id="@item.TicketProcessingVietNid" class="btn btn-sm btn-outline-danger" title="Delete">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        @if (!Model.TicketProcessingVietN.Any())
        {
            <div class="card-body text-center text-muted">
                <i class="bi bi-info-circle fs-1"></i>
                <p class="mt-2">No records found.</p>
            </div>
        }
    </div>
</div>
@section Scripts {
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/table-pagination.js"></script>
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script>
        $(document).ready(function() {
            $('#ticketProcessingTable').createTablePagination({
                rowPerPage: 10,  
                paginationColor: '#007bff',  
                fontColor: '#333',  
                transitionDuration: 300  
            });
        });

        "use strict";

        var connection = new signalR.HubConnectionBuilder().withUrl("/notificationHub").build();

        connection.start().then(function () {
            console.log("Connected to NotificationHub");
        }).catch(function (err) {
            return console.error(err.toString());
        });

        connection.on("ReceiverCreate", function (jsonData) {
            var data = JSON.parse(jsonData);
            console.log("New item created:", data);
            
            // Build new table row dynamically
            var newRow = `
                <tr data-id="${data.TicketProcessingVietNid}">
                    <td>${data.ProcessingCode || ''}</td>
                    <td>${data.TicketReference || ''}</td>
                    <td>${data.ProcessingAction || ''}</td>
                    <td><span title="${data.ActionDescription || ''}">${(data.ActionDescription || '').substring(0, 25)}${(data.ActionDescription || '').length > 25 ? '...' : ''}</span></td>
                    <td><span class="badge bg-secondary">Low</span></td>
                    <td><span class="badge bg-success">Active</span></td>
                    <td>${data.OverdueDays || 0}</td>
                    <td>${data.EscalationLevel || 0}</td>
                    <td><i class="bi bi-x-circle text-danger"></i></td>
                    <td>${data.ProcessedBy || ''}</td>
                    <td>${data.ProcessedDate ? new Date(data.ProcessedDate).toISOString().split('T')[0] : ''}</td>
                    <td><span title="${data.ResolvedNote || ''}">${(data.ResolvedNote || '').substring(0, 25)}${(data.ResolvedNote || '').length > 25 ? '...' : ''}</span></td>
                    <td>${data.CreatedDate ? new Date(data.CreatedDate).toISOString().split('T')[0] : ''}</td>
                    <td>${data.ModifiedDate ? new Date(data.ModifiedDate).toISOString().split('T')[0] : ''}</td>
                    <td>${data.TypeName || ''}</td>
                    <td class="text-center">
                        <a href="/TicketProcessingVietNs/Details?id=${data.TicketProcessingVietNid}" class="btn btn-sm btn-outline-info me-1" title="View Details">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a href="/TicketProcessingVietNs/Edit?id=${data.TicketProcessingVietNid}" class="btn btn-sm btn-outline-primary me-1" title="Edit">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a href="/TicketProcessingVietNs/Delete?id=${data.TicketProcessingVietNid}" class="btn btn-sm btn-outline-danger" title="Delete">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            `;
            
            $('#ticketProcessingTable tbody').prepend(newRow);
            console.log('New ticket processing record added to table');
        });

        connection.on("ReceiverUpdate", function (jsonData) {
            var data = JSON.parse(jsonData);
            console.log("Updated item with ID: " + data.Id);
            
            // Find and highlight the updated row
            var row = $('#ticketProcessingTable tbody').find(`tr[data-id='${data.Id}']`);
            if (row.length > 0) {
                row.addClass('table-warning');
                setTimeout(function() {
                    row.removeClass('table-warning');
                }, 2000);
                console.log('Item with ID ' + data.Id + ' highlighted');
            }
        });

        connection.on("ReceiverDelete", function (ticketProcessingVietNid) {
            // Remove the row from the table - ticketProcessingVietNid is just a string ID
            $('#ticketProcessingTable tbody').find(`tr[data-id='${ticketProcessingVietNid}']`).remove();
            console.log('Removed item with ID: ' + ticketProcessingVietNid);
        });
    </script>
}