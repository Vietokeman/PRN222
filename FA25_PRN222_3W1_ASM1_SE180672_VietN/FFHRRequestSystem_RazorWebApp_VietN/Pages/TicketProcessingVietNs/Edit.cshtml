@page
@model FFHRRequestSystem_RazorWebApp_VietN.Pages.TicketProcessingVietNs.EditModel

@{
    ViewData["Title"] = "Edit Ticket Processing";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-pencil-square me-2"></i>Edit Ticket Processing
        </h2>
        <a asp-page="./Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <form method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Basic Information Card -->
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-info-circle me-2"></i>Basic Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <input type="hidden" asp-for="TicketProcessingVietN.TicketProcessingVietNid" />
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="TicketProcessingVietN.ProcessingCode" class="form-label fw-bold">Processing Code</label>
                                <input asp-for="TicketProcessingVietN.ProcessingCode" class="form-control" pattern="PROC-\d{4}-\d{4}" title="Format: PROC-xxxx-xxxx (e.g., PROC-2024-0003)" placeholder="PROC-2024-0003" />
                                <span asp-validation-for="TicketProcessingVietN.ProcessingCode" class="text-danger"></span>
                                <small class="form-text text-muted">Format: PROC-xxxx-xxxx (e.g., PROC-2024-0003)</small>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="TicketProcessingVietN.TicketReference" class="form-label fw-bold">Ticket Reference</label>
                                <input asp-for="TicketProcessingVietN.TicketReference" class="form-control" />
                                <span asp-validation-for="TicketProcessingVietN.TicketReference" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="TicketProcessingVietN.ProcessingTypeVietNid" class="form-label fw-bold">Processing Type</label>
                                <select asp-for="TicketProcessingVietN.ProcessingTypeVietNid" class="form-control" asp-items="ViewBag.ProcessingTypeVietNid"></select>
                                <span asp-validation-for="TicketProcessingVietN.ProcessingTypeVietNid" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="TicketProcessingVietN.RelatedTicketCode" class="form-label fw-bold">Related Ticket Code</label>
                                <input asp-for="TicketProcessingVietN.RelatedTicketCode" class="form-control" />
                                <span asp-validation-for="TicketProcessingVietN.RelatedTicketCode" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Processing Details Card -->
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-gear me-2"></i>Processing Details
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="TicketProcessingVietN.ProcessingAction" class="form-label fw-bold">Processing Action</label>
                                <input asp-for="TicketProcessingVietN.ProcessingAction" class="form-control" />
                                <span asp-validation-for="TicketProcessingVietN.ProcessingAction" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="TicketProcessingVietN.ActionDescription" class="form-label fw-bold">Action Description</label>
                                <textarea asp-for="TicketProcessingVietN.ActionDescription" class="form-control" rows="2"></textarea>
                                <span asp-validation-for="TicketProcessingVietN.ActionDescription" class="text-danger"></span>
                            </div>
                            <div class="col-md-3">
                                <label asp-for="TicketProcessingVietN.PriorityLevel" class="form-label fw-bold">Priority Level</label>
                                <select asp-for="TicketProcessingVietN.PriorityLevel" class="form-control">
                                    <option value="1">Low</option>
                                    <option value="2">Medium</option>
                                    <option value="3">High</option>
                                </select>
                                <span asp-validation-for="TicketProcessingVietN.PriorityLevel" class="text-danger"></span>
                            </div>
                            <div class="col-md-3">
                                <label asp-for="TicketProcessingVietN.Status" class="form-label fw-bold">Status</label>
                                <select asp-for="TicketProcessingVietN.Status" class="form-control">
                                    <option value="1">Active</option>
                                    <option value="2">Resolved</option>
                                    <option value="3">Closed</option>
                                </select>
                                <span asp-validation-for="TicketProcessingVietN.Status" class="text-danger"></span>
                            </div>
                            <div class="col-md-3">
                                <label asp-for="TicketProcessingVietN.OverdueDays" class="form-label fw-bold">Overdue Days</label>
                                <input asp-for="TicketProcessingVietN.OverdueDays" class="form-control" type="number" />
                                <span asp-validation-for="TicketProcessingVietN.OverdueDays" class="text-danger"></span>
                            </div>
                            <div class="col-md-3">
                                <label asp-for="TicketProcessingVietN.EscalationLevel" class="form-label fw-bold">Escalation Level</label>
                                <input asp-for="TicketProcessingVietN.EscalationLevel" class="form-control" type="number" />
                                <span asp-validation-for="TicketProcessingVietN.EscalationLevel" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Additional Information Card -->
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-file-text me-2"></i>Additional Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="TicketProcessingVietN.ProcessedBy" class="form-label fw-bold">Processed By</label>
                                <input asp-for="TicketProcessingVietN.ProcessedBy" class="form-control" />
                                <span asp-validation-for="TicketProcessingVietN.ProcessedBy" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="TicketProcessingVietN.ProcessedDate" class="form-label fw-bold">Processed Date</label>
                                <input asp-for="TicketProcessingVietN.ProcessedDate" class="form-control" type="datetime-local" />
                                <span asp-validation-for="TicketProcessingVietN.ProcessedDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <label asp-for="TicketProcessingVietN.ResolvedNote" class="form-label fw-bold">Resolved Note</label>
                                <textarea asp-for="TicketProcessingVietN.ResolvedNote" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="TicketProcessingVietN.ResolvedNote" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="TicketProcessingVietN.CreatedDate" class="form-label fw-bold">Created Date (Read-only)</label>
                                <input asp-for="TicketProcessingVietN.CreatedDate" class="form-control" readonly />
                                <span asp-validation-for="TicketProcessingVietN.CreatedDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="TicketProcessingVietN.ModifiedDate" class="form-label fw-bold">Modified Date (Auto-updated)</label>
                                <input asp-for="TicketProcessingVietN.ModifiedDate" class="form-control" readonly />
                                <span asp-validation-for="TicketProcessingVietN.ModifiedDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <div class="form-check">
                                    <input class="form-check-input" asp-for="TicketProcessingVietN.IsAutoProcessed" />
                                    <label class="form-check-label fw-bold" asp-for="TicketProcessingVietN.IsAutoProcessed">
                                        Auto Processed
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="card border-secondary">
                    <div class="card-body">
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Save Changes
                            </button>
                            <button type="button" id="btnHubUpdate" class="btn btn-warning">
                                <i class="bi bi-broadcast"></i> Update via SignalR
                            </button>
                            <a asp-page="./Index" class="btn btn-secondary ms-auto">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script>
        "use strict";

        // Toast notification helper
        function showToast(message, type = 'success') {
            const bgColors = {
                success: 'linear-gradient(to right, #00b09b, #96c93d)',
                error: 'linear-gradient(to right, #ff5f6d, #ffc371)',
                info: 'linear-gradient(to right, #4facfe, #00f2fe)',
                warning: 'linear-gradient(to right, #f093fb, #f5576c)'
            };

            Toastify({
                text: message,
                duration: 3000,
                gravity: "top",
                position: "right",
                style: {
                    background: bgColors[type] || bgColors.success,
                },
                stopOnFocus: true,
            }).showToast();
        }

        var connection = new signalR.HubConnectionBuilder().withUrl("/notificationHub").build();

        connection.start().then(function () {
            console.log("[SignalR] Connected to NotificationHub (edit page)");
            showToast("Connected to real-time updates", "info");
        }).catch(function (err) {
            console.error("[SignalR] Connection failed:", err.toString());
            showToast("Failed to connect to real-time updates", "error");
            return console.error(err.toString());
        });

        const btnHubUpdate = document.getElementById("btnHubUpdate");
        btnHubUpdate?.addEventListener("click", function (event) {
            event.preventDefault();

            var dataObj = JSON.stringify({
                TicketProcessingVietNid: document.getElementById("TicketProcessingVietN_TicketProcessingVietNid").value,
                ProcessingCode: document.getElementById("TicketProcessingVietN_ProcessingCode").value,
                TicketReference: document.getElementById("TicketProcessingVietN_TicketReference").value,
                ProcessingTypeVietNid: document.getElementById("TicketProcessingVietN_ProcessingTypeVietNid").value,
                ProcessingAction: document.getElementById("TicketProcessingVietN_ProcessingAction").value,
                ActionDescription: document.getElementById("TicketProcessingVietN_ActionDescription").value,
                RelatedTicketCode: document.getElementById("TicketProcessingVietN_RelatedTicketCode").value,
                PriorityLevel: document.getElementById("TicketProcessingVietN_PriorityLevel").value,
                Status: document.getElementById("TicketProcessingVietN_Status").value,
                OverdueDays: document.getElementById("TicketProcessingVietN_OverdueDays").value,
                EscalationLevel: document.getElementById("TicketProcessingVietN_EscalationLevel").value,
                IsAutoProcessed: document.getElementById("TicketProcessingVietN_IsAutoProcessed").checked,
                ProcessedBy: document.getElementById("TicketProcessingVietN_ProcessedBy").value,
                ProcessedDate: document.getElementById("TicketProcessingVietN_ProcessedDate").value,
                ResolvedNote: document.getElementById("TicketProcessingVietN_ResolvedNote").value,
                CreatedDate: document.getElementById("TicketProcessingVietN_CreatedDate").value,
                ModifiedDate: document.getElementById("TicketProcessingVietN_ModifiedDate").value,
                TypeName: document.querySelector("#TicketProcessingVietN_ProcessingTypeVietNid option:checked")?.text || ""
            });

            showToast("Sending ticket update request...", "info");
            
            connection.invoke("HubUpdate", dataObj)
                .then(function() {
                    console.log("[SignalR] HubUpdate invoked successfully");
                    showToast("Ticket update request sent! Redirecting...", "success");
                    
                    // Redirect after 2 seconds
                    setTimeout(function() {
                        window.location.href = '/TicketProcessingVietNs';
                    }, 2000);
                })
                .catch(function (err) {
                    console.error("[SignalR] Error:", err.toString());
                    showToast("Failed to update ticket: " + err.toString(), "error");
                });
        });

        // Bootstrap validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}
