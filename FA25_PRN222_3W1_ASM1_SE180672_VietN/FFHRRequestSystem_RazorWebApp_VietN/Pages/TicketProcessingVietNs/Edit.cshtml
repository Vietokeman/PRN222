@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script>
        "use strict";

        var connection = new signalR.HubConnectionBuilder().withUrl("/notificationHub").build();

        connection.start().then(function () {
            console.log("Connected to NotificationHub (edit)");
        }).catch(function (err) {
            return console.error(err.toString());
        });

        const btnHubUpdate = document.getElementById("btnHubUpdate");
        btnHubUpdate?.addEventListener("click", function (event) {
            event.preventDefault();

            var dataObj = JSON.stringify({
                TicketProcessingVietNid: document.getElementById("TicketProcessingVietN_TicketProcessingVietNid").value,
                ProcessingCode: document.getElementById("TicketProcessingVietN_ProcessingCode").value,
                TicketReference: document.getElementById("TicketProcessingVietN_TicketReference").value,
                ProcessingTypeVietNid: document.getElementById("TicketProcessingVietN_ProcessingTypeVietNid").value,
                ProcessingAction: document.getElementById("TicketProcessingVietN_ProcessingAction").value,
                ActionDescription: document.getElementById("TicketProcessingVietN_ActionDescription").value,
                RelatedTicketCode: document.getElementById("TicketProcessingVietN_RelatedTicketCode").value,
                PriorityLevel: document.getElementById("TicketProcessingVietN_PriorityLevel").value,
                Status: document.getElementById("TicketProcessingVietN_Status").value,
                OverdueDays: document.getElementById("TicketProcessingVietN_OverdueDays").value,
                EscalationLevel: document.getElementById("TicketProcessingVietN_EscalationLevel").value,
                IsAutoProcessed: document.getElementById("TicketProcessingVietN_IsAutoProcessed").checked,
                ProcessedBy: document.getElementById("TicketProcessingVietN_ProcessedBy").value,
                ProcessedDate: document.getElementById("TicketProcessingVietN_ProcessedDate").value,
                ResolvedNote: document.getElementById("TicketProcessingVietN_ResolvedNote").value,
                CreatedDate: document.getElementById("TicketProcessingVietN_CreatedDate").value,
                ModifiedDate: document.getElementById("TicketProcessingVietN_ModifiedDate").value,
                TypeName: document.querySelector("#TicketProcessingVietN_ProcessingTypeVietNid option:checked")?.text || ""
            });

            connection.invoke("HubUpdate", dataObj).catch(function (err) {
                return console.error(err.toString());
            });
        });
    </script>
}
