@page
@model FFHRRequestSystem_RazorWebApp_VietN.Pages.TicketProcessingVietNs.CreateModel

@{
    ViewData["Title"] = "Create Ticket Processing";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-success">
            <i class="bi bi-plus-circle me-2"></i>Create New Ticket Processing
        </h2>
        <a asp-page="./Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <form method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Basic Information Card -->
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-info-circle me-2"></i>Basic Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="TicketProcessingVietN.ProcessingCode" class="form-label fw-bold">Processing Code <span class="text-danger">*</span></label>
                                <input asp-for="TicketProcessingVietN.ProcessingCode" class="form-control" pattern="PROC-\d{4}-\d{4}" title="Format: PROC-xxxx-xxxx (e.g., PROC-2024-0003)" placeholder="PROC-2024-0003" required />
                                <span asp-validation-for="TicketProcessingVietN.ProcessingCode" class="text-danger"></span>
                                <small class="form-text text-muted">Format: PROC-xxxx-xxxx (e.g., PROC-2024-0003)</small>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="TicketProcessingVietN.TicketReference" class="form-label fw-bold">Ticket Reference <span class="text-danger">*</span></label>
                                <input asp-for="TicketProcessingVietN.TicketReference" class="form-control" required />
                                <span asp-validation-for="TicketProcessingVietN.TicketReference" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="TicketProcessingVietN.ProcessingTypeVietNid" class="form-label fw-bold">Processing Type <span class="text-danger">*</span></label>
                                <select asp-for="TicketProcessingVietN.ProcessingTypeVietNid" class="form-control" asp-items="ViewBag.ProcessingTypeVietNid" required>
                                    <option value="">-- Select Type --</option>
                                </select>
                                <span asp-validation-for="TicketProcessingVietN.ProcessingTypeVietNid" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="TicketProcessingVietN.RelatedTicketCode" class="form-label fw-bold">Related Ticket Code</label>
                                <input asp-for="TicketProcessingVietN.RelatedTicketCode" class="form-control" />
                                <span asp-validation-for="TicketProcessingVietN.RelatedTicketCode" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Processing Details Card -->
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-gear me-2"></i>Processing Details
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="TicketProcessingVietN.ProcessingAction" class="form-label fw-bold">Processing Action <span class="text-danger">*</span></label>
                                <input asp-for="TicketProcessingVietN.ProcessingAction" class="form-control" required />
                                <span asp-validation-for="TicketProcessingVietN.ProcessingAction" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="TicketProcessingVietN.ActionDescription" class="form-label fw-bold">Action Description</label>
                                <textarea asp-for="TicketProcessingVietN.ActionDescription" class="form-control" rows="2"></textarea>
                                <span asp-validation-for="TicketProcessingVietN.ActionDescription" class="text-danger"></span>
                            </div>
                            <div class="col-md-3">
                                <label asp-for="TicketProcessingVietN.PriorityLevel" class="form-label fw-bold">Priority Level <span class="text-danger">*</span></label>
                                <select asp-for="TicketProcessingVietN.PriorityLevel" class="form-control" required>
                                    <option value="1">Low</option>
                                    <option value="2">Medium</option>
                                    <option value="3">High</option>
                                </select>
                                <span asp-validation-for="TicketProcessingVietN.PriorityLevel" class="text-danger"></span>
                            </div>
                            <div class="col-md-3">
                                <label asp-for="TicketProcessingVietN.Status" class="form-label fw-bold">Status <span class="text-danger">*</span></label>
                                <select asp-for="TicketProcessingVietN.Status" class="form-control" required>
                                    <option value="1">Active</option>
                                    <option value="2">Resolved</option>
                                    <option value="3">Closed</option>
                                </select>
                                <span asp-validation-for="TicketProcessingVietN.Status" class="text-danger"></span>
                            </div>
                            <div class="col-md-3">
                                <label asp-for="TicketProcessingVietN.OverdueDays" class="form-label fw-bold">Overdue Days</label>
                                <input asp-for="TicketProcessingVietN.OverdueDays" class="form-control" type="number" />
                                <span asp-validation-for="TicketProcessingVietN.OverdueDays" class="text-danger"></span>
                            </div>
                            <div class="col-md-3">
                                <label asp-for="TicketProcessingVietN.EscalationLevel" class="form-label fw-bold">Escalation Level</label>
                                <input asp-for="TicketProcessingVietN.EscalationLevel" class="form-control" type="number" />
                                <span asp-validation-for="TicketProcessingVietN.EscalationLevel" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input class="form-check-input" asp-for="TicketProcessingVietN.IsAutoProcessed" />
                                    <label class="form-check-label fw-bold" asp-for="TicketProcessingVietN.IsAutoProcessed">
                                        Is Auto Processed
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="TicketProcessingVietN.ProcessedBy" class="form-label fw-bold">Processed By</label>
                                <input asp-for="TicketProcessingVietN.ProcessedBy" class="form-control" />
                                <span asp-validation-for="TicketProcessingVietN.ProcessedBy" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Additional Notes Card -->
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0">
                            <i class="bi bi-sticky me-2"></i>Additional Notes
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-12">
                                <label asp-for="TicketProcessingVietN.ResolvedNote" class="form-label fw-bold">Resolved Note</label>
                                <textarea asp-for="TicketProcessingVietN.ResolvedNote" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="TicketProcessingVietN.ResolvedNote" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="d-flex justify-content-end gap-2">
                    <a asp-page="./Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                    <button type="button" id="btnHubCreate" class="btn btn-warning">
                        <i class="bi bi-broadcast"></i> Create via SignalR
                    </button>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Create Ticket Processing
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script>
        "use strict";

        // Toast notification helper
        function showToast(message, type = 'success') {
            const bgColors = {
                success: 'linear-gradient(to right, #00b09b, #96c93d)',
                error: 'linear-gradient(to right, #ff5f6d, #ffc371)',
                info: 'linear-gradient(to right, #4facfe, #00f2fe)',
                warning: 'linear-gradient(to right, #f093fb, #f5576c)'
            };

            Toastify({
                text: message,
                duration: 3000,
                gravity: "top",
                position: "right",
                style: {
                    background: bgColors[type] || bgColors.success,
                },
                stopOnFocus: true,
            }).showToast();
        }

        function validateForm() {
            const processingCode = document.getElementById("TicketProcessingVietN_ProcessingCode").value;
            const ticketReference = document.getElementById("TicketProcessingVietN_TicketReference").value;
            const processingTypeId = document.getElementById("TicketProcessingVietN_ProcessingTypeVietNid").value;
            const processingAction = document.getElementById("TicketProcessingVietN_ProcessingAction").value;
            const priorityLevel = document.getElementById("TicketProcessingVietN_PriorityLevel").value;
            const status = document.getElementById("TicketProcessingVietN_Status").value;

            let errors = [];
            
            if (!processingCode?.trim()) errors.push("Processing Code is required");
            if (!ticketReference?.trim()) errors.push("Ticket Reference is required");
            if (!processingTypeId) errors.push("Processing Type is required");
            if (!processingAction?.trim()) errors.push("Processing Action is required");
            if (!priorityLevel) errors.push("Priority Level is required");
            if (!status) errors.push("Status is required");

            if (errors.length > 0) {
                showToast(errors.join("\n"), "error");
                return false;
            }
            return true;
        }

        var connection = new signalR.HubConnectionBuilder().withUrl("/notificationHub").build();

        connection.start().then(function () {
            console.log("Connected to NotificationHub (create)");
            showToast("Connected to real-time updates", "info");
        }).catch(function (err) {
            console.error(err.toString());
            showToast("Failed to connect to real-time updates", "error");
            return console.error(err.toString());
        });

        const btnHubCreate = document.getElementById("btnHubCreate");
        btnHubCreate?.addEventListener("click", function (event) {
            event.preventDefault();

            // Validate form before sending
            if (!validateForm()) {
                return;
            }

            var dataObj = JSON.stringify({
                TicketProcessingVietNid: generateGuid(),
                ProcessingCode: document.getElementById("TicketProcessingVietN_ProcessingCode").value,
                TicketReference: document.getElementById("TicketProcessingVietN_TicketReference").value,
                ProcessingTypeVietNid: document.getElementById("TicketProcessingVietN_ProcessingTypeVietNid").value,
                ProcessingAction: document.getElementById("TicketProcessingVietN_ProcessingAction").value,
                ActionDescription: document.getElementById("TicketProcessingVietN_ActionDescription").value,
                RelatedTicketCode: document.getElementById("TicketProcessingVietN_RelatedTicketCode").value,
                PriorityLevel: document.getElementById("TicketProcessingVietN_PriorityLevel").value,
                Status: document.getElementById("TicketProcessingVietN_Status").value,
                OverdueDays: document.getElementById("TicketProcessingVietN_OverdueDays").value || 0,
                EscalationLevel: document.getElementById("TicketProcessingVietN_EscalationLevel").value || 0,
                IsAutoProcessed: document.getElementById("TicketProcessingVietN_IsAutoProcessed")?.checked || false,
                ProcessedBy: document.getElementById("TicketProcessingVietN_ProcessedBy").value || "VietN",
                ResolvedNote: document.getElementById("TicketProcessingVietN_ResolvedNote").value || "",
                CreatedDate: new Date().toISOString(),
                ModifiedDate: new Date().toISOString(),
                TypeName: document.querySelector("#TicketProcessingVietN_ProcessingTypeVietNid option:checked")?.text || ""
            });

            showToast("Sending ticket creation request...", "info");
            console.log("[SignalR] Sending HubCreate with data:", dataObj);
            
            connection.invoke("HubCreate", dataObj)
                .then(function() {
                    console.log("[SignalR] HubCreate invoked successfully");
                    showToast("Ticket created successfully via SignalR! Redirecting...", "success");
                    
                    // Clear the form
                    document.querySelector("form").reset();
                    
                    // Redirect after 2 seconds
                    setTimeout(function() {
                        window.location.href = '/TicketProcessingVietNs';
                    }, 2000);
                })
                .catch(function (err) {
                    console.error("[SignalR] Error:", err.toString());
                    showToast("Failed to create ticket: " + err.toString(), "error");
                    return console.error(err.toString());
                });
        });

        function generateGuid() {
            return 'xxxxxxxx-xxxx-4xxx-yxxx-xxxxxxxxxxxx'.replace(/[xy]/g, function(c) {
                var r = Math.random() * 16 | 0, v = c == 'x' ? r : (r & 0x3 | 0x8);
                return v.toString(16);
            });
        }

        // Bootstrap validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}
