<div>
    <a asp-page="./Edit" asp-route-id="@Model.LionProfile.LionProfileId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
                                              
@section Scripts {
    <script src="~/js/signalr/dist/browser/signalr.min.js"></script>
    <script>
        const currentId = @Model.LionProfile.LionProfileId;
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/notificationHub")
            .build();

        connection.on("ReceiveDelete", function (id) {
            if (parseInt(id) === currentId) {
                alert('This item has been deleted!');
                window.location.href = '/LionProfile/Index';
            }
        });

        connection.start().catch(function (err) {
            return console.error(err.toString());
        });
    </script>
}
