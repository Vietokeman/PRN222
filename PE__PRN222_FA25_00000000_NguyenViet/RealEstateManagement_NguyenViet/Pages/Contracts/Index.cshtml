@page
@model RealEstateManagement_NguyenViet.Pages.Contracts.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@if (User.IsInRole("2"))
{
    <p>
        <a asp-page="Create">Create New</a>
    </p>
}
<form method="get" class="form-inline mb-3">
    <div class="form-group mr-2">
        <label for="SearchTitle" class="mr-2">SearchTitle:</label>
        <input type="number" step="0.01" name="SearchTitle" value="@Model.SearchTitle" class="form-control" placeholder="Enter title" />
    </div>
    <div class="form-group mr-2">
        <label for="SearchPropertyType" class="mr-2">SearchPropertyType</label>
        <input type="text" name="SearchPropertyType" value="@Model.SearchPropertyType" class="form-control" placeholder="ESearchPropertyType" />
    </div>
    <div class="form-group mr-2">
        <label for="SearchSigningDate" class="mr-2">SearchSigningDate</label>
        <input type="text" name="SearchSigningDate" value="@Model.SearchSigningDate" class="form-control" placeholder="Enter signing date" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
    <a asp-page="./Index" class="btn btn-secondary ml-2">Clear</a>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Contract[0].ContractTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contract[0].PropertyType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contract[0].SigningDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contract[0].ExpirationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contract[0].Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contract[0].Broker.FullName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="table">
@foreach (var item in Model.Contract) {
        <tr data-id="@item.ContractId">
            <td>
                @Html.DisplayFor(modelItem => item.ContractTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PropertyType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SigningDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpirationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Broker.FullName)
            </td>
                <td>
                    @if (User.IsInRole("2"))
                    {
                        <a asp-page="./Edit" asp-route-id="@item.ContractId">Edit</a>
                        <text> | </text>
                    }
                    <a asp-page="./Details" asp-route-id="@item.ContractId">Details</a>
                    @if (User.IsInRole("2"))
                    {
                        <text> | </text>
                        <a asp-page="./Delete" asp-route-id="@item.ContractId">Delete</a>
                    }
                </td>

        </tr>
}
    </tbody>
</table>

<nav>
    <ul class="pagination">
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a class="page-link"
                   asp-page="./Index"
                   asp-route-pageIndex="@i"
                   asp-route-SearchTitle="@Model.SearchTitle"
                   asp-route-SearchPropertyType="@Model.SearchPropertyType"
                   asp-route-SearchSigningDate="@Model.SearchSigningDate">

               
                    @i
                </a>
            </li>
        }
    </ul>
</nav>      
@section Scripts {
    <script src="~/js/signalr/dist/browser/signalr.min.js"></script>
    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/notificationHub")
            .build();

        connection.on("ReceiveDelete", function (id) {
            const row = document.querySelector(`tr[data-id="${id}"]`);
            if (row) {
                row.remove();
                const table = document.getElementById('table');
                if (table.children.length === 0) {
                    window.location.reload();
                }
            }
        });

        connection.start().catch(function (err) {
            return console.error(err.toString());
        });
    </script>
}
